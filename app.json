{
  "expo": {
    "name": "MovieZang",
    "slug": "moviezang-tv",
    "scheme": "moviezang",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon-all.png",
    "splash": {
      "image": "./assets/images/splash-logo-all.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "jsEngine": "hermes",
    "assetBundlePatterns": [
      "**/*"
    ],
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/app-icon-web-favicon.png",
      "output": "static"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "icon": "./assets/images/app-icon-android-legacy.png",
      "package": "com.moviezang.tv",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon-android-adaptive-foreground.png",
        "backgroundImage": "./assets/images/app-icon-android-adaptive-background.png"
      },
      "splash": {
        "image": "./assets/images/splash-logo-android-universal.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      },
      "userInterfaceStyle": "light"
    },
    "ios": {
      "icon": "./assets/images/app-icon-ios.png",
      "supportsTablet": true,
      "supportsAppleTV": true,
      "bundleIdentifier": "com.moviezang.tv",
      "deploymentTarget": "14.0",
      "splash": {
        "image": "./assets/images/splash-logo-ios-mobile.png",
        "tabletImage": "./assets/images/splash-logo-ios-tablet.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      },
      "userInterfaceStyle": "light",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      },
      "appleTeamId": "QHS5TSHJA5"
    },
    "tvos": {
      "bundleIdentifier": "com.moviezang.tv",
      "deploymentTarget": "14.0",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "web": {
      "favicon": "./assets/images/app-icon-web-favicon.png",
      "splash": {
        "image": "./assets/images/splash-logo-web.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      },
      "bundler": "metro"
    },
    "plugins": [
      [
        "@react-native-tvos/config-tv",
        {
          "androidTVBanner": "./assets/images/tv_banner.png",
          "appleTVImages": {
            "icon": "./assets/images/ignite-tvos-1280x768.png",
            "iconSmall": "./assets/images/ignite-tvos-400x240.png",
            "iconSmall2x": "./assets/images/ignite-tvos-800x480.png",
            "topShelf": "./assets/images/ignite-tvos-1920x720.png",
            "topShelf2x": "./assets/images/ignite-tvos-3840x1440.png",
            "topShelfWide": "./assets/images/ignite-tvos-2320x720.png",
            "topShelfWide2x": "./assets/images/ignite-tvos-4640x1440.png"
          }
        }
      ],
      "expo-font"
    ],
    "newArchEnabled": true,
    "extra": {
      "eas": {
        "projectId": "cd4e9d3e-e060-45d5-a299-f868f75802a6"
      },
      "convexUrl": "https://kindhearted-dalmatian-79.convex.cloud"
    },
    "owner": "iconnectit"
  }
}
